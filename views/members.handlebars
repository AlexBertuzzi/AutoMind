                    </div>
                    <div class="col-3 col-sm-3">
                      <p> Color: {{this.dataValues.color}}</p>
                    </div>
                    <div class="col-3 col-sm-3">
                      <p> Quote: {{this.dataValues.quote}}</p>
                    </div>
                    <div class="col-3 col-sm-3">
                      <p> Follow Up: {{this.dataValues.followUp}}</p>
                    </div>
              </div>
                  <div class="row lable">
                    <div class="col">
                      <p> Notes: {{this.dataValues.note}}</p>
                    </div>
                  </div>
                  <button data-id="{{this.dataValues.id}}" class="deleteClient btn btn-danger">Delete</button>
            </li>
          {{/each}}
          </ul>
        </div>
      </div>
    </div>
  
